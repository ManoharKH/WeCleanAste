<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idRLbottomSheet_driver"
    android:background="@color/backgrnd">

    <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ShapeAppearance.Neumorph.CardView"
        app:neumorph_shapeType="pressed"
        app:neumorph_shadowElevation="@dimen/_4sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">



            <TextView
                android:id="@+id/txt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/chau_philomene_one"
                android:text="Address"
                android:textColor="@color/prim_text"
                android:textSize="@dimen/_14sdp"
                android:drawableStart="@drawable/ic_location"/>

            <TextView
                android:id="@+id/txt_latitute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_address"
                android:layout_margin="4dp"
                android:fontFamily="@font/chau_philomene_one"
                android:text="Latitude :"
                android:textColor="@color/prim_text"
                android:textSize="@dimen/_14sdp"
                android:drawableStart="@drawable/ic_arrow"/>

            <TextView
                android:id="@+id/txt_longitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_latitute"
                android:layout_margin="4dp"
                android:fontFamily="@font/chau_philomene_one"
                android:text="Longitude :"
                android:textColor="@color/prim_text"
                android:textSize="@dimen/_14sdp"
                android:drawableStart="@drawable/ic_arrow"/>

            <soup.neumorphism.NeumorphButton
                android:id="@+id/btn_update"
                style="@style/ShapeAppearance.Neumorph.Button"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_below="@+id/txt_longitude"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:fontFamily="@font/chau_philomene_one"
                android:gravity="center"
                android:text="Update"
                android:textAllCaps="false"
                android:textColor="@color/prim_text"
                android:textSize="@dimen/_20sdp"
                android:textStyle="italic"
                app:neumorph_shadowColorDark="@color/dark_shadow"
                app:neumorph_shadowColorLight="@color/light_shadow"
                app:neumorph_shadowElevation="@dimen/_4sdp"
                android:clickable="true"
                android:focusable="true"
                app:neumorph_shapeType="basin"/>

        </LinearLayout>


    </soup.neumorphism.NeumorphCardView>



</RelativeLayout>