<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    android:layout_marginRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0089BB"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/txt_complaintaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:drawableStart="@drawable/ic_location"
            android:text="Address :"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_latitute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_complaintaddress"
            android:layout_marginVertical="5dp"
            android:drawableStart="@drawable/ic_arrow"
            android:text="Latitude -"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_latitute"
            android:layout_marginVertical="5dp"
            android:drawableStart="@drawable/ic_arrow"
            android:text="Longitude -"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_adminStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_longitude"
            android:layout_marginVertical="5dp"
            android:drawableStart="@drawable/ic_status"
            android:fontFamily="@font/baloo"
            android:text="Status : "
            android:textColor="@color/black"
            android:textStyle="italic" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>